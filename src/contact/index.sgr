extends(src='../layout.sgr')
  block(name='title')
    title Contact Us
  block(name='description')
    meta(name='description' content='Get in touch by email or phone')
  block(name='header')
    include(src='../_header.sgr')
  block(name='content')
    main
      section.page
        h1 We enjoy satisfying our visitors
        div.banner
        //- p However you prefer to get in touch we are here to help.
        div.contact-container
          div.sidebar
            h4 Telephone & Email
            ul
              li
                img.icon(src='/assets/img/icon/light/whatsapp.svg' width="16" height="16" alt="Whatsapp")
                a(href='tel:+6287860878782') +6287860878782
              li
                img.icon(src='/assets/img/icon/light/phone.svg' width="16" height="16" alt="Phone")
                a(href='tel:+6281236340887') +6281236340887
              li
                img.icon(src='/assets/img/icon/light/phone.svg' width="16" height="16" alt="Phone")
                a(href='tel:+6282146376989') +6282146376989
              li
                img.icon(src='/assets/img/icon/light/envelope.svg' width="16" height="16" alt="Mail")
                a(href='mailto:reservations@manaveda.com') reservations@manaveda.com
            h4 Mana Sari
            p
              span.address Jalan Gunung Sari, Ubud, Bali, 80571
            h4 Mana Boutique
            p
              span.address Penestanan Klod, Ubud, Bali, 80571
          div.form
            p.success.hidden
              | Thanks, your message has been sent to the Mana Team, we will get back to you shortly.
              br
              br
              a.send(title='Send another message')
                | Send another message
            div.error.hidden
              span Please correct these errors:
              ul.fields.hidden
            p.fetch.hidden
            form.contact(action='http://api.manaveda.com/contact' method='post')
              input(type='hidden' name='redirect' value='')
              input(type='text' name='name' id='name' placeholder='Your name')
              input(type='email' name='email' id='email' placeholder='Your email address')
              textarea(placeholder='Your message' rows='6' name='message')
              div.actions
                input(type='submit' name='submit' value='send')
  block(name='footer')
    include(src='../_footer.sgr')
